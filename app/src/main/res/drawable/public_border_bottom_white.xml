<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="#E6E6E6"/>
        </shape>
    </item>
    <!-- 主体背景颜色值  在item中的bottom各指定了1dp的边框线-->
    <item android:top="0dp" android:bottom="0.5dp" android:left="0dp" android:right="0dp">
        <shape>
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
</layer-list>